{
    "name": "Pixi Package Manager",
    "id": "pixi",
    "version": "0.0.2",
    "description": "Install and configure Pixi package manager for Python project dependencies",
    "options": {
        "version": {
            "type": "string",
            "default": "v0.41.4",
            "description": "Pixi version to install"
        },
        "addBashCompletion": {
            "type": "boolean",
            "default": true,
            "description": "Add Pixi bash completion"
        },
        "autoInstallDeps": {
            "type": "boolean",
            "default": true,
            "description": "Automatically run 'pixi install' during container creation"
        },
        "configureVolume": {
            "type": "boolean",
            "default": true,
            "description": "Configure a named volume for .pixi directory"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils",
        "ghcr.io/devcontainers/features/curl"
    ]
}
